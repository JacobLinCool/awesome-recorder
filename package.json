{
  "name": "awesome-recorder",
  "version": "0.1.2",
  "description": "A powerful in-browser audio recorder for recording audio with voice activity detection and mp3 encoding.",
  "author": "JacobLinCool <jacoblincool@gmail.com> (https://github.com/JacobLinCool)",
  "license": "MIT",
  "keywords": [
    "audio",
    "recorder",
    "voice activity detection",
    "mp3",
    "browser"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/JacobLinCool/awesome-recorder.git"
  },
  "homepage": "https://github.com/JacobLinCool/awesome-recorder",
  "bugs": {
    "url": "https://github.com/JacobLinCool/awesome-recorder/issues"
  },
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "format": "prettier --write .",
    "build": "tsup",
    "dev": "vite",
    "examples": "vite",
    "changeset": "changeset"
  },
  "dependencies": {
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ricky0123/vad-web": "^0.0.22",
    "@types/debug": "^4.1.12",
    "debug": "^4.4.0",
    "eventemitter3": "^5.0.1"
  },
  "devDependencies": {
    "@changesets/changelog-github": "^0.5.1",
    "@changesets/cli": "^2.28.1",
    "prettier": "^3.5.3",
    "prettier-plugin-organize-imports": "^4.1.0",
    "serve": "^14.2.1",
    "tsup": "^8.4.0",
    "tsx": "^4.19.3",
    "typescript": "^5.8.2",
    "vite": "^5.0.0"
  },
  "packageManager": "pnpm@10.5.1",
  "pnpm": {
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  }
}
